{
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": true,

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,

    "jsx": "react-jsx",
    "strict": true,

    "removeComments": true,
    "declaration": false,
    "sourceMap": true
  },
}
